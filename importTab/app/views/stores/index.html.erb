<h1>Listing stores</h1>

<table>
  <tr>
    <th>Name</th>
    <th>ID</th>
    <th>Location</th>
    <th>Destroy</th>
  </tr>

<% @stores.each do |store| %>
  <tr>
    <td><%= store.name %></td>
    <td><%= store.id %></td>
    <td><%= store.merchant_stores %></td>
    <td><%= link_to 'Destroy', store, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

